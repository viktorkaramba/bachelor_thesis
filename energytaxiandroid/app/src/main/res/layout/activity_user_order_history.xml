<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.UserOrderHistoryActivity"
>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:theme="@style/AppTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbarUserOrderHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userOrderHistoryBackButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/toolbarUserOrderHistory"
            app:layout_constraintStart_toStartOf="@+id/toolbarUserOrderHistory"
            android:background="@drawable/back_arrow"
            android:backgroundTint="@color/dark_blue"
            tools:ignore="SpeakableTextPresentCheck"/>
    <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/main_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/userOrderHistoryList"
            app:layout_constraintTop_toBottomOf="@+id/toolbarUserOrderHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>