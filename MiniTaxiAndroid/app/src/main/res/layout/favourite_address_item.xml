<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="20dp"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/favouriteAddressRecycleView">

	<androidx.cardview.widget.CardView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:cardElevation="0dp"
			android:id="@+id/cardView">
			<TextView
					android:id="@+id/favouriteAddressesName"
					android:text="@string/adderess"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_margin="10dp"
					android:textSize="16sp"
			/>
	</androidx.cardview.widget.CardView>
	<TextView
			android:id="@+id/favouriteAddressesCountOrders"
			android:text="@string/count_orders"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/deleteFavouriteAddressButton"
			android:textSize="16sp"
			android:layout_margin="10dp"
	/>
	<Button
			android:text="@string/delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/roundcorner"
			app:layout_constraintTop_toBottomOf="@+id/favouriteAddressesCountOrders"
			app:layout_constraintEnd_toEndOf="parent"
			android:id="@+id/deleteFavouriteAddressButton"
			android:layout_marginEnd="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>