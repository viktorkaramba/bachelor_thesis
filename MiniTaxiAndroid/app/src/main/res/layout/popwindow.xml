<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="center"
			android:background="@drawable/card_view_border_reverse"
			android:layout_centerInParent="true">
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/driverNameCustomerText"
				android:textAlignment="center"
				android:layout_margin="5dp"
				android:textSize="26sp"/>
		<TextView
				android:layout_margin="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/driverAddressCustomerText"
				android:textAlignment="center"
				android:textSize="26sp"/>
		<TextView
				android:layout_margin="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/driverAddressDeliveryText"
				android:textAlignment="center" android:textSize="26sp"/>
		<TextView
				android:layout_margin="5dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/driverTelephoneCustomerText"
				android:textAlignment="center" android:textSize="26sp"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center">
			<Button
					android:text="@string/accept"
					android:textColor="@color/light_blue"
					android:background="@drawable/roundcorner_button"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:id="@+id/acceptButton"/>
			<Button
					android:text="@string/cancel"
					android:textColor="@color/light_blue"
					android:background="@drawable/roundcorner_button"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_margin="10dp"
					android:id="@+id/cancelButton" android:layout_weight="1"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>