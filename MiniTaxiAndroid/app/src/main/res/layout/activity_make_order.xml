<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center|center_vertical|center_horizontal"
              android:orientation="vertical"
              tools:visibility="visible">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/light_blue"
            android:id="@+id/standardCardView"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/standard_car_icon"
                    android:id="@+id/standardIconImageView"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/standard"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_toEndOf="@+id/standardIconImageView"
                    android:layout_above="@+id/priceStandardTextView"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceStandardTextView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/standardIconImageView"/>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/dark_blue"
                    android:id="@+id/standardRadioButton"
                    android:layout_above="@+id/priceStandardTextView" android:minWidth="48dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/standardCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/comfortCardView"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/light_blue"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comfortIconImageView"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/comfort_car_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comfort"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_toEndOf="@+id/comfortIconImageView"
                    android:layout_above="@+id/priceComfortTextView"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceComfortTextView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/comfortIconImageView"/>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/dark_blue"
                    android:id="@+id/comfortRadioButton"
                    android:layout_above="@+id/priceComfortTextView" android:minWidth="48dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/comfortCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/eliteCardView"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/light_blue"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/elite_car_icon"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/eliteIconImageView"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/elite"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_toEndOf="@+id/eliteIconImageView"
                    android:layout_above="@+id/priceEliteTextView"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceEliteTextView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/eliteIconImageView"/>

            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:buttonTint="@color/dark_blue"
                    android:id="@+id/eliteRadioButton"
                    android:layout_above="@+id/priceEliteTextView" android:minWidth="48dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/eliteCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">
        <Button
                android:id="@+id/makeOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_order"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/roundcorner"
                android:layout_height="wrap_content"
                android:id="@+id/cancelMakeOrderButton"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>