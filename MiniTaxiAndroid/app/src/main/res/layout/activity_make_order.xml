<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center|center_vertical"
              android:orientation="vertical"
              tools:visibility="visible">

    <TextView
            android:id="@+id/addressCustomerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_customer"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="219dp"/>

    <EditText
            android:id="@+id/customerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="200dp" tools:ignore="SpeakableTextPresentCheck" android:minHeight="48dp"/>

    <TextView
            android:id="@+id/addressDeliveryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_delivery"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="307dp"/>

    <EditText
            android:id="@+id/deliveryAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="290dp" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"
            android:importantForAutofill="no"/>

    <TextView
            android:id="@+id/telephoneNumberText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/customer_telephone_number"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="401dp"/>

    <EditText
            android:id="@+id/telephoneNumberCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="382dp" tools:ignore="SpeakableTextPresentCheck" android:minHeight="48dp"/>

    <TextView
            android:text="Your name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/customerNameText"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/customerName" android:minHeight="48dp" tools:ignore="SpeakableTextPresentCheck"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:gravity="center">
        <Button
                android:id="@+id/makeOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_order"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/cancelMakeOrderButton" android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>