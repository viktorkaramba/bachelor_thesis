<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/main_background"
		tools:context=".activities.HelpActivity">

	<androidx.cardview.widget.CardView
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:cardCornerRadius="15dp"
			android:layout_margin="5dp"
			android:background="@color/dark_blue"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<LinearLayout
				android:background="@drawable/card_view_borders"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:layout_margin="10dp"
					android:text="@string/contact_us"
					android:textColor="@color/light_blue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">
				<TextView
						android:id="@+id/helpCallTextView"
						android:layout_alignParentTop="true"
						android:layout_alignParentStart="true"
						android:text="@string/call"
						android:textColor="@color/light_blue"
						android:drawablePadding="20dp"
						android:layout_margin="10dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:drawableStartCompat="@drawable/telephone_phone_svgrepo_com"/>
				<TextView
						android:layout_alignParentTop="true"
						android:gravity="center"
						android:layout_toEndOf="@+id/helpCallTextView"
						android:layout_alignParentEnd="true"
						android:text="@string/xxx_xxx_xxx_xxx"
						android:textColor="@color/light_blue"
						android:drawablePadding="20dp"
						android:layout_margin="10dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>


			</RelativeLayout>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical">
				<TextView
						android:id="@+id/helpEmailTextView"
						android:text="@string/email"
						android:textColor="@color/light_blue"
						android:drawablePadding="20dp"
						android:layout_alignParentTop="true"
						android:layout_alignParentStart="true"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:drawableStartCompat="@drawable/mail_svgrepo_com" android:layout_marginTop="10dp"
						android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
						android:layout_marginBottom="10dp"/>

			<TextView
						android:layout_alignParentTop="true"
						android:gravity="center"
						android:layout_toEndOf="@+id/helpEmailTextView"
						android:layout_alignParentEnd="true"
						android:text="@string/energytaxihelp_gmail_com"
						android:textColor="@color/light_blue"
						android:drawablePadding="20dp"
						android:layout_margin="10dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>


			</RelativeLayout>

			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical">
				<TextView
						android:id="@+id/helpTelegramTextView"
						android:text="@string/telegram"
						android:layout_alignParentTop="true"
						android:layout_alignParentStart="true"
						android:textColor="@color/light_blue"
						android:drawablePadding="20dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:drawableStartCompat="@drawable/telegram_svgrepo_com"
						android:layout_marginTop="10dp"
						android:layout_marginStart="10dp"
						android:layout_marginEnd="10dp"
						android:layout_marginBottom="10dp"/>

				<TextView
						android:layout_alignParentTop="true"
						android:gravity="center"
						android:layout_toEndOf="@+id/helpTelegramTextView"
						android:layout_alignParentEnd="true"
						android:text="@string/t_me_energytaxihelp"
						android:textColor="@color/light_blue"
						android:drawablePadding="20dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_marginTop="10dp"
						android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
						android:layout_marginBottom="10dp"/>


			</RelativeLayout>
			<Button
					android:id="@+id/helpButtonBack"
					android:text="@string/back"
					android:background="@drawable/roundcorner"
					android:layout_margin="10dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>