<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.UserRegistryActivity">
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:gravity="center">
		<TextView
				android:text="Username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/userNameRegistryText" android:textSize="24sp"/>
		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:ems="10"
				android:id="@+id/userNameRegistryEditText" tools:ignore="SpeakableTextPresentCheck"
				android:minHeight="48dp"/>
		<TextView
				android:text="Password"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/passwordRegistryText" android:textSize="24sp"/>
		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:ems="10"
				android:id="@+id/passwordRegistryEditText" android:minHeight="48dp"
				tools:ignore="SpeakableTextPresentCheck"/>
		<Button
				android:text="Register"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/registryUserRegistryButton"
				android:textSize="24sp"/>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>