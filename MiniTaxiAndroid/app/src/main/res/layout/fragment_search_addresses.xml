<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:map="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.SearchAddressesFragment">

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:cardCornerRadius="20dp"
			android:layout_margin="10dp">
		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/mainMenuRelativeLayout">
			<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="5dp"
					android:layout_marginStart="10dp"
					android:layout_alignBottom="@+id/favouriteAddressesFromImageButton"
					android:layout_toStartOf="@+id/favouriteAddressesFromImageButton"
					map:startIconDrawable="@drawable/search_icon"
					map:endIconDrawable="@drawable/close_search_icon"
					map:endIconMode="clear_text"
					map:endIconCheckable="true"
					android:background="@drawable/roundcorner"
					map:hintTextColor="@color/dark_blue"
					map:startIconTint="@color/dark_blue"
					map:endIconTint="@color/dark_blue"
					android:id="@+id/searchFromTextInputLayout"
			>

				<com.google.android.material.textfield.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="20sp"
						android:inputType="textNoSuggestions"
						android:focusableInTouchMode="true"
						android:textCursorDrawable="@null"
						android:background="@color/light_blue"
						android:backgroundTint="@color/light_blue"
						android:id="@+id/searchFromTextInputEditText"
						android:hint="@string/from"
						android:layout_margin="10dp"
				/>
			</com.google.android.material.textfield.TextInputLayout>
			<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_toStartOf="@+id/mapSearchFromImageButton"
					android:background="@drawable/roundcorner_button"
					map:srcCompat="@drawable/favourite_addresses_list"
					android:id="@+id/favouriteAddressesFromImageButton"
					android:layout_marginTop="10dp"
					android:layout_marginRight="5dp"
					android:layout_marginLeft="5dp"
					android:layout_marginBottom="10dp"/>
			<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_alignParentEnd="true"
					android:background="@drawable/roundcorner_button"
					map:srcCompat="@drawable/select_on_map"
					android:id="@+id/mapSearchFromImageButton"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="10dp"
					android:layout_marginStart="5dp"
					android:layout_marginBottom="10dp"/>
			<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/searchFromTextInputLayout"
					android:layout_alignParentStart="true"
					android:layout_toStartOf="@+id/favouriteAddressesToImageButton"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="5dp"
					android:layout_marginStart="10dp"
					android:layout_alignBottom="@+id/favouriteAddressesToImageButton"
					map:startIconDrawable="@drawable/search_icon"
					map:endIconDrawable="@drawable/close_search_icon"
					map:endIconMode="clear_text"
					map:endIconCheckable="true"
					android:background="@drawable/roundcorner"
					map:hintTextColor="@color/dark_blue"
					map:startIconTint="@color/dark_blue"
					map:endIconTint="@color/dark_blue"
					android:id="@+id/searchToTextInputLayout"
			>
				<com.google.android.material.textfield.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="20sp"
						android:inputType="textNoSuggestions"
						android:focusableInTouchMode="true"
						android:textCursorDrawable="@null"
						android:background="@color/light_blue"
						android:backgroundTint="@color/light_blue"
						android:id="@+id/searchToTextInputEditText"
						android:hint="@string/to"
						android:layout_margin="10dp"
				/>
			</com.google.android.material.textfield.TextInputLayout>
			<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toStartOf="@+id/mapSearchToImageButton"
					android:layout_below="@+id/searchFromTextInputLayout"
					android:background="@drawable/roundcorner_button"
					map:srcCompat="@drawable/favourite_addresses_list"
					android:id="@+id/favouriteAddressesToImageButton"
					android:layout_marginTop="10dp"
					android:layout_marginRight="5dp"
					android:layout_marginLeft="5dp"
					android:layout_marginBottom="10dp"/>
			<ImageButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_below="@+id/searchFromTextInputLayout"
					android:background="@drawable/roundcorner_button"
					map:srcCompat="@drawable/select_on_map"
					android:id="@+id/mapSearchToImageButton"
					android:layout_marginTop="10dp"
					android:layout_marginEnd="10dp"
					android:layout_marginStart="5dp"
					android:layout_marginBottom="10dp"
			/>
			<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:layout_marginStart="10dp"
					android:layout_marginEnd="10dp"
					android:layout_below="@+id/mapSearchToImageButton"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"
					map:endIconDrawable="@drawable/close_search_icon"
					map:endIconMode="clear_text"
					map:endIconScaleType="center"
					android:background="@drawable/roundcorner"
					android:gravity="center_vertical"
					map:endIconTint="@color/dark_blue"
					android:id="@+id/favouriteDriverTextInputLayout"
			>
				<com.google.android.material.textfield.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:textSize="14sp"
						android:text="@string/pick_favourite_driver_text"
						android:gravity="center"
						android:paddingStart="5dp"
						android:paddingEnd="5dp"
						android:layout_margin="10dp"
						android:inputType="textNoSuggestions"
						android:focusableInTouchMode="false"
						android:textCursorDrawable="@null"
						android:background="@drawable/roundcorner"
						android:backgroundTint="@color/light_blue"
						android:id="@+id/favouriteDriverTextInputEditText"
				/>
			</com.google.android.material.textfield.TextInputLayout>
			<Button
					android:text="@string/order"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/roundcorner"
					android:layout_below="@+id/favouriteDriverTextInputLayout"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"
					android:id="@+id/orderMainMenuButton"
					android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
					android:layout_marginBottom="10dp"/>

		</RelativeLayout>
	</androidx.cardview.widget.CardView>
</FrameLayout>