<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:background="@color/dark_blue"
		tools:context=".activities.OrderInfoActivity">
	<androidx.cardview.widget.CardView
			android:scrollbarAlwaysDrawVerticalTrack="true"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_margin="5dp"
			app:cardBackgroundColor="@color/light_blue"
			app:cardCornerRadius="15dp">
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_view_borders"
			android:textAlignment="center">
		<TextView
				android:text="@string/order_info"
				android:textColor="@color/light_blue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:id="@+id/orderInfoText"
				android:textAlignment="center"
				android:textSize="34sp"/>
		<TextView
				android:text="@string/date"
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoDateText"
				android:textSize="24sp"/>
		<TextView
				android:layout_below="@+id/orderInfoDateText"
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoDateEditText"
				android:textSize="24sp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoDateEditText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:text="@string/customer_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoCustomerNameText"
				android:textSize="24sp"/>
		<TextView
				android:layout_below="@+id/orderInfoCustomerNameText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoCustomerNameEditText"
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:textSize="24sp" android:layout_marginTop="8dp" android:layout_marginStart="0dp"
				android:layout_marginEnd="0dp" android:layout_marginBottom="10dp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
				android:text="@string/address_customer"
				android:layout_below="@+id/orderInfoCustomerNameEditText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoAddressCustomerText"
				android:textSize="24sp"/>
		<TextView
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_below="@+id/orderInfoAddressCustomerText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoAddressCustomerEditText"
				android:textSize="24sp" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
				android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
				android:text="@string/delivery_address"
				android:layout_below="@+id/orderInfoAddressCustomerEditText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoAddressDeliveryText"
				android:textSize="24sp"/>
		<TextView
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/orderInfoAddressDeliveryText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:id="@+id/orderInfoAddressDeliveryEditText"
				android:textSize="24sp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
				android:text="@string/customer_telephone_number"
				android:layout_below="@+id/orderInfoAddressDeliveryEditText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoTelephoneCustomerText"
				android:textSize="24sp"/>
		<TextView
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoTelephoneCustomerText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoTelephoneCustomerEditText"
				android:textSize="24sp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
			android:text="@string/price"
			android:layout_below="@+id/orderInfoTelephoneCustomerEditText"
			android:layout_alignParentStart="true"
			android:layout_alignParentEnd="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/orderInfoPriceText"
			android:textSize="24sp"/>
		<TextView
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoPriceText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoPriceEditText"
				android:textSize="24sp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:text="@string/rating"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoPriceEditText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoRatingText"
				android:textSize="24sp"/>
		<TextView
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoRatingText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoRatingEditText"
				android:textSize="24sp"/>
		<TextView
				android:textColor="@color/light_blue"
				android:layout_margin="10dp"
				android:text="@string/number_of_kilometers"
				android:layout_below="@+id/orderInfoRatingEditText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoNumberOfKilometersText"
				android:textSize="24sp"/>
		<TextView
				android:background="@drawable/roundcorner"
				android:gravity="center"
				android:padding="10dp"
				android:layout_margin="10dp"
				android:layout_below="@+id/orderInfoNumberOfKilometersText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoNumberOfKilometersEditText"
				android:textSize="24sp"/>
		<Button
				android:layout_below="@+id/orderInfoNumberOfKilometersText"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:text="@string/Back"
				android:background="@drawable/roundcorner"
				android:layout_margin="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/orderInfoBackButton"/>
	</RelativeLayout>
	</androidx.cardview.widget.CardView>
</ScrollView>