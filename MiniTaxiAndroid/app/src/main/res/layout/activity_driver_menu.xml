<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/dark_blue"
              android:orientation="vertical">
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card_view_borders"
			android:layout_margin="10dp"
			android:gravity="center">
		<com.google.android.material.floatingactionbutton.FloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:clickable="true"
				app:srcCompat="@mipmap/ic_profile"
				android:id="@+id/profileButton"
				android:backgroundTint="#D5D5D5"
				tools:ignore="SpeakableTextPresentCheck"
		/>
		<Switch
				android:text="@string/is_online"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/dark_blue"
				android:layout_marginStart="5dp"
				android:paddingLeft="5dp"
				android:theme="@style/SCBSwitch"
				android:background="@drawable/roundcorner"
				android:id="@+id/isOnlineSwitch"
				tools:ignore="UseSwitchCompatOrMaterialXml"/>
	</LinearLayout>
	<Button
			android:text="@string/see_car_recommendations"
			android:layout_width="wrap_content"
			android:textSize="12sp"
			android:background="@drawable/roundcorner"
			android:padding="10dp"
			android:layout_marginBottom="10dp"
			android:layout_height="wrap_content"
			android:id="@+id/buttonCarRec"
	/>
	<androidx.recyclerview.widget.RecyclerView
			android:background="@drawable/main_background"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/orderInfoProfileList"
	/>
</LinearLayout>