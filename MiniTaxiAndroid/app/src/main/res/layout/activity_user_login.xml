<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.UserLoginActivity">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:gravity="center" android:id="@+id/linearLayout2">
		<TextView
				android:text="Username"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/userNameLoginText" android:textSize="24sp"/>
		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:ems="10"
				android:id="@+id/userNameLoginEditText"
				tools:ignore="SpeakableTextPresentCheck"
				android:minHeight="48dp"/>
		<TextView
				android:text="Password"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/passwordLoginText" android:textSize="24sp"/>
		<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:ems="10"
				android:id="@+id/passwordLoginEditText" android:minHeight="48dp"
				tools:ignore="SpeakableTextPresentCheck"/>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
			<CheckBox
					android:text="Login as a driver"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/driverUserCheckBox"
					android:layout_weight="1" android:minHeight="48dp" android:textColor="@color/dark_blue"/>
			<Button
					android:text="Log In"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/loginUserLoginButton"
					android:textSize="24sp"/>
		</LinearLayout>
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="match_parent" android:gravity="center|center_horizontal|center_vertical">
			<Button
					android:text="Registry as driver"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/registryDriverLoginButton"
			/>
			<Button
					android:text="Registry as User"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/registryUserLoginButton"
					android:layout_weight="1"/>
		</LinearLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>