<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.UserProfileActivity">
	<androidx.appcompat.widget.Toolbar
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/light_blue"
			android:theme="?attr/actionBarTheme"
			android:minHeight="?attr/actionBarSize"
			android:id="@+id/userProfileToolbar"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/userProfileScrollView"
			app:layout_constraintEnd_toEndOf="parent">
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/favouriteAddressBackButton"
				android:background="@drawable/back_arrow"
				android:backgroundTint="@color/dark_blue"
				android:layout_gravity="start"
				tools:ignore="SpeakableTextPresentCheck"/>
	</androidx.appcompat.widget.Toolbar>
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:id="@+id/userProfileScrollView"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:background="@drawable/main_background"
			app:layout_constraintTop_toBottomOf="@+id/userProfileToolbar">
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<androidx.cardview.widget.CardView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:cardElevation="50dp"
					android:layout_margin="5dp"
					app:cardBackgroundColor="@color/light_blue"
					app:cardCornerRadius="15dp">
				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/card_view_borders"
						android:textAlignment="center">
					<TextView
							android:text="@string/profile"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/userProfileText"
							android:textAlignment="center"
							android:textColor="@color/light_blue"
							android:layout_alignParentTop="true"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:textSize="34sp"
							android:layout_marginTop="10dp"
							android:layout_marginStart="10dp"
							android:layout_marginEnd="10dp"
							android:layout_marginBottom="10dp"/>
					<TextView
							android:text="@string/username"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/userProfileNameText"
							android:layout_below="@+id/userProfileText"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:textColor="@color/light_blue"
							android:textSize="24sp"
							android:layout_margin="10dp"/>
					<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_below="@+id/userProfileNameText"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:id="@+id/userProfileUsernameRelativeLayout">
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:background="@drawable/roundcorner"
								android:layout_alignParentStart="true"
								android:layout_alignParentBottom="true"
								android:layout_alignParentTop="true"
								android:layout_toStartOf="@+id/userProfileChangeUsername"
								android:gravity="center"
								android:textSize="24sp"
								android:padding="10dp"
								android:id="@+id/userProfileNameEditText"
								android:textColor="@color/dark_blue"
								android:layout_marginStart="10dp"
								android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"/>
						<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentEnd="true"
								android:layout_alignParentTop="true"
								android:layout_alignParentBottom="true"
								android:id="@+id/userProfileChangeUsername"
								android:src="@drawable/edit_button"
								android:layout_marginStart="10dp"
								android:layout_marginEnd="10dp"
								android:layout_marginBottom="10dp"/>
					</RelativeLayout>
					<TextView
							android:text="@string/password"
							android:layout_margin="10dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textColor="@color/light_blue"
							android:layout_below="@+id/userProfileUsernameRelativeLayout"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:id="@+id/userProfilePasswordText"
							android:textSize="24sp"/>
				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_below="@+id/userProfilePasswordText"
						android:layout_alignParentStart="true"
						android:layout_alignParentEnd="true"
						android:id="@+id/userProfilePasswordLinearLayout">

				<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="@drawable/roundcorner"
							android:gravity="center"
							android:textSize="24sp"
							android:padding="10dp"
							android:text="@string/hide_password"
							android:textColor="@color/dark_blue"
							android:layout_alignParentStart="true"
							android:layout_alignParentBottom="true"
							android:layout_alignParentTop="true"
							android:layout_toStartOf="@+id/userProfileChangePassword"
							android:id="@+id/userProfilePasswordEditText"
							android:layout_marginStart="10dp"
							android:layout_marginEnd="10dp"
							android:layout_marginBottom="10dp"/>
					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentEnd="true"
							android:layout_alignParentTop="true"
							android:layout_alignParentBottom="true"
							android:id="@+id/userProfileChangePassword"
							android:src="@drawable/edit_button"
							android:layout_marginStart="10dp"
							android:layout_marginEnd="10dp"
							android:layout_marginBottom="10dp"/>
				</RelativeLayout>
					<TextView
							android:text="@string/rank"
							android:layout_margin="10dp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textColor="@color/light_blue"
							android:layout_below="@+id/userProfilePasswordLinearLayout"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:id="@+id/userProfileRankText"
							android:textSize="24sp"/>
					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_below="@+id/userProfileRankText"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:id="@+id/userProfileRankEditText"
							android:background="@drawable/roundcorner"
							android:gravity="center"
							android:textSize="24sp"
							android:padding="10dp"
							android:layout_marginTop="10dp" android:layout_marginStart="10dp"
							android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"/>
					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_below="@+id/userProfileRankEditText"
							android:layout_alignParentStart="true"
							android:layout_alignParentEnd="true"
							android:id="@+id/userMilitaryBonusesEditText"
							android:background="@drawable/roundcorner"
							android:gravity="center"
							android:textSize="24sp"
							android:padding="10dp"
							android:visibility="gone"
							android:layout_margin="10dp"
					/>

				</RelativeLayout>
			</androidx.cardview.widget.CardView>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>