<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:id="@+id/user_reject_response_layout"
                android:padding="20dp">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="center">
		<ImageView
				android:layout_width="48dp"
				android:layout_height="48dp" app:srcCompat="@mipmap/ic_reject" android:id="@+id/driverRejectImageView"/>
		<TextView
				android:text="Sorry, driver reject your order"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/driverRejectTextView"/>
	</LinearLayout>
</RelativeLayout>