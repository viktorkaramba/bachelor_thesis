<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activities.FavouriteAddressesActivity">
	<androidx.appcompat.widget.Toolbar
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/light_blue"
			android:theme="?attr/actionBarTheme"
			android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar4"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
	<androidx.recyclerview.widget.RecyclerView
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:id="@+id/favouriteAddressesList"
			app:layout_constraintTop_toBottomOf="@+id/toolbar4"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/favouriteAddressBackButton"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="@+id/toolbar4" android:layout_marginBottom="8dp"
			android:background="@drawable/back_arrow"
			android:backgroundTint="@color/dark_blue"
			app:layout_constraintTop_toTopOf="parent"
			tools:ignore="SpeakableTextPresentCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>