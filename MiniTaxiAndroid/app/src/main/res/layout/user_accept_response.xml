<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/user_accept_response_layout"
android:padding="20dp">

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="center">
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_accept"
				android:id="@+id/driverAcceptImageView"/>
		<TextView
				android:text="Driver accept your order"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/driverAcceptText"/>
	</LinearLayout>
</RelativeLayout>